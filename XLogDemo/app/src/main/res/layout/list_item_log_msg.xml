<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:clickable="true"
              android:gravity="center_vertical"
              android:longClickable="true"
              android:minHeight="@dimen/list_item_height"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left4x"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/index_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textColor="@color/black_light"
            android:textSize="@dimen/prompt_tiny_text_size"/>

        <TextView
            android:id="@+id/id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textColor="@color/black_light"
            android:textSize="@dimen/prompt_normal_text_size"/>

        <TextView
            android:id="@+id/key_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textColor="@color/black_light"
            android:textSize="@dimen/prompt_normal_text_size"/>

        <TextView
            android:id="@+id/add_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textColor="@color/black_light"
            android:textSize="@dimen/prompt_small3_text_size"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/value_text_view"
            style="@style/text_view_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>


    </LinearLayout>


</LinearLayout>